<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <Description>My custom public library.</Description>
    <IsPackable>true</IsPackable>

    <TargetFrameworks>net6.0</TargetFrameworks>

    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
    <None Include="../../docs/images/logo_128.png" Pack="true" PackagePath="$(PackageIcon)" Visible="false" />
    <None Include="../../README.md" Pack="true" PackagePath="$(PackageReadmeFile)"/>
  </ItemGroup>

  <ItemGroup>
    <!-- TODO: Just to showcase a package reference, you can remove it. -->
    <PackageReference Include="Yarhl" />
  </ItemGroup>

</Project>
